root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf

[*.{yml,yaml,tf}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 4

[*.{py,pyi,pyx}]
indent_style = space
indent_size = 4
max_line_length = 88

[Makefile]
indent_style = tab
indent_size = 4

[*.{c++,cc,cpp,cxx,h,h++,hh,hpp,hxx,inl,ipp,tlh,tli,cu}]
indent_size = 4
indent_style = tab
